          ElevatedButton(
            onPressed: (){},
            child: Text("fazer pedido"),
          ),

          Padding(padding: EdgeInsets.all(32)),
          Center(
            child: ElevatedButton.icon(
              onPressed: (){
                Navigator.pop(context);

              },
              icon: Icon(Icons.arrow_back),
              label: Text("Voltar"),
            ),
          ),
        ],
      ),
    );
  }
}
